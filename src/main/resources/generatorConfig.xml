<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 数据库驱动  (修改为自己的版本)-->
    <classPathEntry  location="D:\repo\mysql\mysql-connector-java\8.0.15\mysql-connector-java-8.0.15.jar"/>
    <!--MyBatis3:默认值，生成基于MyBatis3.X以上版本的内容-->
    <context id="DB2Tables"  targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.43.207:3306/mysql?serverTimezone=UTC&amp;characterEncoding=utf8" userId="root"
                        password="password">
        </jdbcConnection>


        <javaTypeResolver>
            <!--
            true：使用BigDecimal对应DECIMAL和 NUMERIC数据类型
            false：默认,
               scale>0;length>18：使用BigDecimal;
               scale=0;length[10,18]：使用Long；
               scale=0;length[5,9]：使用Integer；
               scale=0;length<5：使用Short；
         -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成实体类的包名和位置                包名                           前缀名-->
        <javaModelGenerator targetPackage="com.zhongruan.template.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- 生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.zhongruan.template.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <!-- 要生成的表: tableName是数据库中的表名或视图名 domainObjectName是实体类名   生成正删改查-->
        <table tableName="database_info"></table>
        <table tableName="identifier_mapping_info" ></table>
        <table tableName="textual_info" ></table>
        <table tableName="template_info" ></table>
        <!-- **-->
    </context>
</generatorConfiguration>